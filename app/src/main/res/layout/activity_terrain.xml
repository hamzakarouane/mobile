<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TerrainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100px">

        <TextView
            android:id="@+id/Id"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="ID"/>

        <EditText
            android:id="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="ADDRESS" />

        <EditText
            android:id="@+id/txtNombres"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="DESCRIPTION" />

        <EditText
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/etat"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="STATE" />

        <EditText
            android:id="@+id/txtApellidos8"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="LATITUDE" />

        <EditText
            android:id="@+id/txtApellidos9"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="LONGITUDE" />

        <EditText
            android:id="@+id/txtApellidos10"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="NOM" />

        <EditText
            android:id="@+id/txtApellidos11"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/rank"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="RANK" />

        <EditText
            android:id="@+id/txtApellidos12"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/sol"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="SOL" />

        <EditText
            android:id="@+id/txtApellidos13"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tarif"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="TARIF (DH)" />

        <EditText
            android:id="@+id/txtApellidos14"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="TYPE" />

        <EditText
            android:id="@+id/txtApellidos15"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:text="URL" />

        <EditText
            android:id="@+id/txtApellidos16"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver" />
    </LinearLayout>

</ScrollView>